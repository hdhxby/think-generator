<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:generator="http://www.think.org/schema/generator"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
              http://www.think.org/schema/generator
               http://www.think.org/schema/generator/think-generator.xsd"
	   default-lazy-init="true">
	<description>
		#代码生成器配置文件:
		#1.自动移除generator前缀
		#2.可以引用环境变量:System.getEnv(): ${env.JAVA_HOME} or System.getProperties(): ${user.home}
		#2.会为所有的property生成property_path属性,如pkg=org.think => pkg_path=org/think
	</description>

	<bean id="dataSource" class="com.alibaba.druid.pool.DruidDataSource" lazy-init="true">
		<property name="driverClassName" value="org.mariadb.jdbc.Driver" />
		<property name="url" value="jdbc:mariadb://172.24.222.44:3306/cls" />
		<property name="username" value="root" />
		<property name="password" value="" />
		<property name="connectProperties">
			<props>
				<prop key="useInformationSchema">true</prop>
			</props>
		</property>
	</bean>


	<generator:generator id="generator">
		<!--框架依赖的核心包,提供接口和工具类-->
		<generator:core>false</generator:core>
		<!--#应用名称-->
		<generator:appName>app</generator:appName>
		<generator:frameName>com.sinfusi.freedom.cls.core</generator:frameName>
		<!--#公司名称-->
		<generator:companyName>com.sinfusi.freedom.cls</generator:companyName>
		<!--<generator:appNameBakEnd>app</generator:appNameBakEnd>-->
		<!--#模块名称-->
		<!--<generator:moduleName>auth</generator:moduleName>-->
		<!--<generator:moduleName>param</generator:moduleName>-->
		<generator:moduleName>bm</generator:moduleName>
		<!--#作者名称-->
		<generator:authorName>lixiaobin</generator:authorName>
		<!--#jsp namespace: web/${namespace}/${className}/list:jsp-->
		<generator:namespace>views</generator:namespace>
		<!--#模板目录-->
		<generator:template>template/app</generator:template>
		<!--#过滤文件-->
		<generator:extensions>java,js,jsp,xml,ts,html,json</generator:extensions>
		<!--#需要移除的表名前缀,使用逗号进行分隔多个前缀,示例值: t_,tm_-->
		<generator:prefix>T_,RBAC_,PARAM_,BM_,PF,CI_</generator:prefix>
		<!--#输出目录-->
		<generator:output>generator_output</generator:output>
		<!--#主键生成规则-->
		<!--<generator:generatorId>true</generator:generatorId>-->
		<!--#审计,创建人,创建时间,更新人,更新时间-->
		<!--<generator:auditing>true</generator:auditing>-->
		<!--#ID生成策略:NONE:不做处理,用字段名,ID:转换成ID-->
		<!--<generator:generatorIdStrategy>NONE</generator:generatorIdStrategy>-->
		<!--#JDBC对catalog和schema属性的获取支持不够-->
		<!--<generator:catalog></generator:catalog>-->
		<!--<generator:schema>THINK</generator:schema>-->
	</generator:generator>
</beans>
